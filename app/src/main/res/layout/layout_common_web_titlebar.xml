<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:background="@color/white"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/left_btn"
        android:layout_width="@dimen/dp_75"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15">

        <LinearLayout
            android:id="@+id/left_btn_bg"
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical">

            <View
                android:id="@+id/left_btn_image"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:background="@mipmap/toolbar_white_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/left_btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            tools:text="测试"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_15"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            tools:text="测试文字的"/>

        <ImageView
            android:id="@+id/title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_right_btn_container"
        android:layout_width="@dimen/dp_75"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical">

        <TextView
            android:id="@+id/text_title_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_15"
            android:visibility="gone"
            tools:text="关闭" />
        <LinearLayout
            android:id="@+id/ll_right_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dp_15"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/left_btn_close"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:src="@mipmap/close" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
