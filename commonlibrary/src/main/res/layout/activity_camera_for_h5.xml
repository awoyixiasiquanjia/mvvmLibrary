<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.example.commonlibrary.view.activity.CameraActivityForH5.CameraClick"/>
        <variable
            name="cameraClick"
            type="CameraClick" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <com.laikang.jtcameraview.JTCameraView
            android:id="@+id/ftdv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img_cover"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/image_switch"
            android:src="@drawable/ic_camera"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:onClick="@{()->cameraClick.imageSwitch()}"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <FrameLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:background="#80000000"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/img_photo"
                android:src="@drawable/takephoto"
                android:scaleType="fitXY"
                android:onClick="@{()->cameraClick.takePhoto()}"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60" />

            <ImageView
                android:id="@+id/finish"
                android:src="@drawable/down"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:onClick="@{()->cameraClick.finish()}"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_25" />
        </FrameLayout>
    </RelativeLayout>
</layout>